        {
          "name": "Login - Developer",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  var jsonData = pm.response.json();",
                  "  pm.environment.set('access_token', jsonData.accessToken);",
                  "  pm.environment.set('refresh_token', jsonData.refreshToken);",
                  "  pm.environment.set('user_role', jsonData.role);",
                  "  console.log('Developer tokens set successfully');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"developer@example.com\",\n  \"password\": \"SecurePassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            },
            "description": "Login as a developer. Returns access and refresh tokens which are automatically saved to environment variables."
          },
          "response": []
        },
        {
          "name": "Login - Recruiter",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  var jsonData = pm.response.json();",
                  "  pm.environment.set('access_token', jsonData.accessToken);",
                  "  pm.environment.set('refresh_token', jsonData.refreshToken);",
                  "  pm.environment.set('user_role', jsonData.role);",
                  "  console.log('Recruiter tokens set successfully');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"recruiter@example.com\",\n  \"password\": \"SecurePassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            },
            "description": "Login as a recruiter. Returns access and refresh tokens which are automatically saved to environment variables."
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  var jsonData = pm.response.json();",
                  "  pm.environment.set('access_token', jsonData.accessToken);",
                  "  console.log('Access token refreshed successfully');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/refresh",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "refresh"
              ]
            },
            "description": "Refresh expired access token using refresh token"
          },
          "response": []
        }
      ],
      "description": "Authentication endpoints - Register, Login, OTP verification, and Token refresh"
    },
    {
      "name": "Portfolio Management",
      "item": [
        {
          "name": "Create/Update Portfolio",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"+1234567890\",\n  \"headline\": \"Senior Full-Stack Developer\",\n  \"about\": \"Passionate developer with 8 years of experience building scalable applications\",\n  \"experience\": [\n    {\n      \"title\": \"Senior Developer\",\n      \"company\": \"Tech Corp\",\n      \"duration\": \"2020 - Present\",\n      \"description\": \"Led development of microservices\"\n    }\n  ],\n  \"skills\": [\n    \"Java\",\n    \"Spring Boot\",\n    \"React\",\n    \"MongoDB\",\n    \"Docker\",\n    \"Kubernetes\"\n  ],\n  \"projects\": [\n    {\n      \"name\": \"E-Commerce Platform\",\n      \"description\": \"Built scalable e-commerce platform\",\n      \"link\": \"https://example.com\"\n    }\n  ],\n  \"education\": [\n    {\n      \"degree\": \"Bachelor of Technology\",\n      \"institution\": \"University Name\",\n      \"year\": \"2016\"\n    }\n  ],\n  \"socialLinks\": {\n    \"github\": \"https://github.com/username\",\n    \"linkedin\": \"https://linkedin.com/in/username\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/portfolio",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "portfolio"
              ]
            },
            "description": "Create or update a portfolio. Requires JWT token in Authorization header."
          },
          "response": []
        },
        {
          "name": "Get My Portfolio",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
